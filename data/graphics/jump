def clear_scr():
    print '\x1B[H\x1B[J' # clear screen

def wait():
    import time
    time.sleep(0.1)

for i in xrange(0,50):
    clear_scr()
    print "\\o/"
    print "_|_"
    print "   "
    wait()
    
    clear_scr()
    print "_o_"
    print " | "
    print "/ \\"
    wait()
    
    clear_scr()
    print " o "
    print "/|\\"
    print "| |"
    wait()
    
    clear_scr()
    print "_o_"
    print " | "
    print "/ \\"
    wait()
